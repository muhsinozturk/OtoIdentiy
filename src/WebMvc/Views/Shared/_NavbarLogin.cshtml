@using System.Security.Claims
@if (User.Identity!.IsAuthenticated) //Kullancı loginse burayı göster
{
    <ul class="navbar-nav mx-5">
        <li class="nav-item dropdown m-2">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">

                @User.Identity.Name
            </a>
            <ul class="dropdown-menu">

               
                <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout" asp-route-returnurl="/Home/Index">Çıkış Yap</a></li>
                @if (User.HasClaim(x => x.Type == ClaimTypes.Role && x.Value == "Admin"))//claim tipi rol olan ve değeri admin olan kullanıcılar için admin panelini göster
                {
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Member" asp-action="Index">Profil</a></li>

                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin Panel</a></li>
                }
                 @if (User.HasClaim(x => x.Type == ClaimTypes.Role && x.Value == "User"))//claim tipi rol olan ve değeri admin olan kullanıcılar için admin panelini göster
                {
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" asp-area="User" asp-controller="Member" asp-action="Index">Profil</a></li>

                    <li><a class="dropdown-item" asp-area="User" asp-controller="Home" asp-action="Index">Personel Panel</a></li>
                }

            </ul>
        </li>
    </ul>
}

else
{
    <a class="btn btn-outline-success " asp-controller="Account" asp-action="SignIn">Üye Giriş</a>

}