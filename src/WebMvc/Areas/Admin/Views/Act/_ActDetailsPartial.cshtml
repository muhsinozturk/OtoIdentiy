@model Application.DTOs.Act.ActWithVehiclesDto

<div class="detail-partial-box">
    <div class="d-flex justify-content-between align-items-center detail-partial-title">
        <span>
            <i class="bi bi-car-front text-primary me-1"></i>
            Müşteriye Ait Araçlar
        </span>

        <a asp-area="Admin"
           asp-controller="Vehicle"
           asp-action="Create"
           asp-route-actId="@Model.Id"
           class="btn btn-sm btn-outline-primary">
            <i class="bi bi-plus-circle me-1"></i> Yeni Araç
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-sm align-middle mb-0">
            <thead>
                <tr>
                    <th>Plaka</th>
                    <th>Marka</th>
                    <th>Model</th>
                    <th>Yıl</th>
                    <th>Açıklama</th>
                    <th class="text-center">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Vehicles != null && Model.Vehicles.Any())
                {
                    @foreach (var v in Model.Vehicles)
                    {
                        <tr>
                            <td class="fw-semibold">@v.Plate</td>
                            <td>@v.Brand</td>
                            <td>@v.Model</td>
                            <td>@v.ModelYear</td>
                            <td>@v.Description</td>
                            <td class="text-center">
                                <div class="d-inline-flex justify-content-center gap-1">
                                    <a asp-area="Admin"
                                       asp-controller="Vehicle"
                                       asp-action="Edit"
                                       asp-route-id="@v.Id"
                                       class="btn btn-sm vehicle-action-btn"
                                       title="Düzenle">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-area="Admin"
                                       asp-controller="Vehicle"
                                       asp-action="Delete"
                                       asp-route-id="@v.Id"
                                       class="btn btn-sm vehicle-action-btn"
                                       title="Sil">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                    <a asp-area="Admin"
                                       asp-controller="WorkOrder"
                                       asp-action="Index"
                                       asp-route-vehicleId="@v.Id"
                                       class="btn btn-sm vehicle-action-btn"
                                       title="İş Emirleri">
                                        <i class="bi bi-clipboard-check"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-3 small">
                            Bu müşteriye ait araç kaydı bulunmamaktadır.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
