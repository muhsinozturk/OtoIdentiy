@model Application.DTOs.WorkOrder.WorkOrderDto

@{
    ViewData["Title"] = "İş Emri Sil";
}

<div class="container mt-4">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4>İş Emrini Sil</h4>
        </div>
        <div class="card-body">
            <p class="text-danger fw-bold">Bu iş emrini silmek istediğinize emin misiniz?</p>

            <dl class="row">
                <dt class="col-sm-3">Araç</dt>
                <dd class="col-sm-9">@Model.VehiclePlate</dd>

                <dt class="col-sm-3">Personel</dt>
                <dd class="col-sm-9">@Model.EmployeeFullName</dd>

                <dt class="col-sm-3">Açılış Tarihi</dt>
                <dd class="col-sm-9">@Model.OpenDate.ToShortDateString()</dd>

                <dt class="col-sm-3">Açıklama</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Evet, Sil</button>
                <a asp-action="Index" asp-route-vehicleId="@Model.VehicleId" class="btn btn-secondary">Vazgeç</a>
            </form>
        </div>
    </div>
</div>
