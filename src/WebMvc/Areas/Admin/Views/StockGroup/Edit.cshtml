@model Application.DTOs.StockGroup.StockGroupDto

<div class="container-fluid px-4 mt-4">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white fw-semibold">
            <i class="bi bi-pencil-square me-2"></i> Stok Grubu Düzenle
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post" novalidate>
                <input type="hidden" asp-for="Id" />

                <div class="row g-3">
                    <!-- Grup Adı -->
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label fw-semibold">Grup Adı</label>
                        <input asp-for="Name" class="form-control form-control-sm" placeholder="Grup adını giriniz" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <!-- Birim Tipi -->
                    <div class="col-md-6">
                        <label asp-for="UnitType" class="form-label fw-semibold">Birim Tipi</label>
                        <input asp-for="UnitType" class="form-control form-control-sm" placeholder="Örn: Adet, Litre, Kilo" />
                        <span asp-validation-for="UnitType" class="text-danger small"></span>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Geri
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save me-1"></i> Güncelle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
