@model List<Application.DTOs.Inventory.InventoryDto>

<div class="card border-danger mb-4">
    <div class="card-header bg-danger text-white fw-semibold">
        <i class="bi bi-box-arrow-up"></i> Stok Çıkışları
    </div>
    <div class="card-body table-responsive">
        @if (Model.Any())
        {
            <table class="table table-hover table-sm align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Stok</th>
                        <th>Miktar</th>
                        <th>Tarih</th>
                        <th>Açıklama</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var o in Model)
                    {
                        <tr>
                            <td>@o.StockName</td>
                            <td class="text-danger fw-semibold">@o.Quantity</td>
                            <td>@o.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@o.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center text-muted small py-2">
                <i class="bi bi-info-circle"></i> Bu depoda hiç çıkış hareketi yok.
            </div>
        }
    </div>
</div>
