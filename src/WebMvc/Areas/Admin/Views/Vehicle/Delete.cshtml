@model Application.DTOs.Vehicle.VehicleDto

<h2>Araç Sil</h2>

<div class="alert alert-danger">
    Bu aracı silmek istediğinize emin misiniz?
</div>

<dl class="row">
    <dt class="col-sm-3">Plaka</dt>
    <dd class="col-sm-9">@Model.Plate</dd>

    <dt class="col-sm-3">Marka</dt>
    <dd class="col-sm-9">@Model.Brand</dd>

    <dt class="col-sm-3">Model</dt>
    <dd class="col-sm-9">@Model.Model</dd>

    <dt class="col-sm-3">Model Yılı</dt>
    <dd class="col-sm-9">@Model.ModelYear</dd>

    <dt class="col-sm-3">Açıklama</dt>
    <dd class="col-sm-9">@Model.Description</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-area="Admin" asp-controller="Act" asp-action="Details" asp-route-id="@Model.ActId" class="btn btn-secondary">Geri</a>
</form>
