@using WebMvc.Models.Identity

@model UserEditViewModel

@{
    ViewData["Title"] = "Kullanıcı Bilgileri";
}

<div class="container pt-4 pb-4 mt-5">
    <div class="row pt-3">

        <!-- Sol panel -->
        <div class="col-lg-3 mt-4 mt-lg-0">
            <div class="d-flex justify-content-center mb-4">
                <div class="profile-image-outer-container">
                    <div class="profile-image-inner-container bg-color-primary">

                        @{
                            var picturePath = Url.Content("~/user/img/" + (Model.PictureFileName ?? "user.png"));
                        }

                        <img src="@picturePath" alt="Profil Resmi" class="img-fluid rounded-circle" style="height:180px" />
                    </div>
                </div>
            </div>

            <aside class="sidebar mt-2" id="sidebar">
                <ul class="nav nav-list flex-column mb-5">
                    <li class="nav-item"><a class="nav-link text-3 text-dark active" asp-area="User" asp-controller="Member" asp-action="Index">Kullanıcı Bilgileri</a></li>
                    <li class="nav-item"><a class="nav-link text-3" asp-area="User" asp-controller="Member" asp-action="UserEdit">Profil Düzenle</a></li>
                    <li class="nav-item"><a class="nav-link text-3" asp-area="User" asp-controller="Member" asp-action="PasswordChange">Şifre Değiştir</a></li>
                </ul>
            </aside>
        </div>

        <!-- Sağ panel -->
        <div class="col-lg-9">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h3 class="mb-0">Kullanıcı Bilgileri</h3>
                </div>
                <div class="card-body">

                    <table class="table table-striped align-middle mb-0">
                        <tbody>
                            <tr>
                                <th class="w-25">Kullanıcı Adı:</th>
                                <td>@Model.UserName</td>
                            </tr>
                            <tr>
                                <th>Email:</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th>Telefon Numarası:</th>
                                <td>@Model.Phone</td>
                            </tr>
                            <tr>
                                <th>Doğum Tarihi:</th>
                                <td>@(Model.BirthDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                            </tr>
                            <tr>
                                <th>Şehir:</th>
                                <td>@(string.IsNullOrEmpty(Model.City) ? "-" : Model.City)</td>
                            </tr>
                            <tr>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
