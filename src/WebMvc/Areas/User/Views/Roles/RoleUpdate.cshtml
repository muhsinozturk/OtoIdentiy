@using WebMvc.Areas.User.Models

@model RoleUpdateViewModel

@{
    ViewData["Title"] = "Rol Oluşturma";
}

@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-info" role="alert">
        @ViewData["SuccessMessage"]
    </div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <!-- Kart yapısı -->
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center fw-bold">
                    <i class="bi bi-person-gear"></i> Rol Oluşturma
                </div>

                <div class="card-body p-4">
                    <form asp-action="RoleUpdate" method="post">
                         <input type="hidden" asp-for="Id" />
                        <!-- Hata özet kutusu -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Rol adı -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" placeholder="Rol adını girin..." />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Kaydet butonu -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success fw-bold">
                                <i class="bi bi-check-circle"></i> Güncelle
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center">
                    <a class="btn btn-outline-secondary btn-sm" asp-area="Admin" asp-controller="Roles" asp-action="Index">
                        <i class="bi bi-arrow-left"></i> Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
