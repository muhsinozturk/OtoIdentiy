@model Application.DTOs.Vehicle.VehicleDto
@{
    ViewData["Title"] = "Araç Düzenle";
}

<div class="container-fluid px-4 mt-4">

    <!-- Başlık ve Geri Butonu -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-semibold mb-0">
            <i class="bi bi-car-front text-primary me-2"></i> Araç Düzenle
        </h2>
        <a asp-area="Admin"
           asp-controller="Act"
           asp-action="Details"
           asp-route-id="@Model.ActId"
           class="btn btn-outline-secondary btn-sm shadow-sm">
            <i class="bi bi-arrow-left-circle me-1"></i> Geri Dön
        </a>
    </div>

    <!-- Başarı / Hata Mesajları -->


    <!-- Düzenleme Kartı -->
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-white fw-semibold">
            <i class="bi bi-pencil-square me-1"></i> Araç Bilgilerini Güncelle
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post" class="row g-3">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ActId" />

                <div class="col-md-4">
                    <label asp-for="Plate" class="form-label fw-semibold">Plaka</label>
                    <input asp-for="Plate" class="form-control" placeholder="Örn: 34 ABC 123" />
                    <span asp-validation-for="Plate" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Brand" class="form-label fw-semibold">Marka</label>
                    <input asp-for="Brand" class="form-control" placeholder="Örn: Honda" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Model" class="form-label fw-semibold">Model</label>
                    <input asp-for="Model" class="form-control" placeholder="Örn: Civic" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="ModelYear" class="form-label fw-semibold">Model Yılı</label>
                    <input asp-for="ModelYear" type="number" min="1980" max="2050" class="form-control" />
                    <span asp-validation-for="ModelYear" class="text-danger"></span>
                </div>

                <div class="col-md-8">
                    <label asp-for="Description" class="form-label fw-semibold">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="2" placeholder="Araçla ilgili açıklama..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="col-12 d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-success me-2 shadow-sm">
                        <i class="bi bi-save2 me-1"></i> Güncelle
                    </button>
                    <a asp-area="Admin"
                       asp-controller="Act"
                       asp-action="Details"
                       asp-route-id="@Model.ActId"
                       class="btn btn-secondary shadow-sm">
                        <i class="bi bi-x-circle me-1"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
