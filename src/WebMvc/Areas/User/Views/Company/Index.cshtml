@model List<Application.DTOs.Company.CompanyDto>

<div class="container-fluid px-0">

    <!-- ⭐ Başlık Alanı -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-primary mb-0">
            <i class="bi bi-building me-2"></i> Şirket Yönetimi
        </h3>

        <a class="btn btn-primary shadow-sm px-4" asp-action="Create">
            <i class="bi bi-plus-circle me-1"></i> Yeni Şirket Ekle
        </a>
    </div>

    <!-- 🏢 Şirket Tablosu -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white fw-semibold">
            Kayıtlı Şirketler
        </div>

        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width:70px;">#</th>
                        <th>Şirket Adı</th>
                        <th style="width:150px;" class="text-center">İşlemler</th>
                    </tr>
                </thead>

                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">
                                <i class="bi bi-info-circle me-2"></i>
                                Kayıtlı şirket bulunmamaktadır.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td class="fw-semibold">@item.Name</td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-outline-primary px-3"
                                       asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="bi bi-pencil-square"></i>
                                        Düzenle
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
