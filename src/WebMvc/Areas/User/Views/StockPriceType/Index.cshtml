@model List<Application.DTOs.StockPriceType.StockPriceTypeDto>

<div class="container-fluid px-4 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-semibold mb-0">
            <i class="bi bi-cash-coin text-primary me-2"></i> Fiyat Tipleri
        </h2>

        <a asp-action="Create" class="btn btn-primary btn-sm shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Yeni Fiyat Tipi
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <table class="table table-bordered table-hover align-middle table-sm mb-0 text-center">
                <thead class="table-light border-bottom">
                    <tr class="text-secondary small text-uppercase">
                        <th>Ad</th>
                        <th>Kod</th>
                        <th>Şirket</th>
                        <th class="text-center" style="width:160px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="border-bottom">
                                <td class="fw-semibold">@item.Name</td>
                                <td>@item.Code</td>
                                <td>@item.CompanyName</td>
                                <td class="text-center">
                                    <div class="btn-group " role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Düzenle">
                                            <i class="bi bi-pencil">Düzenle</i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Sil">
                                            <i class="bi bi-trash">Sil</i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-3">
                                <i class="bi bi-info-circle me-1"></i> Henüz fiyat tipi kaydı bulunmamaktadır.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
