@model List<Application.DTOs.Stock.StockDto>

<div class="container-fluid px-4 mt-4">

    <!-- Başlık ve Butonlar -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-semibold mb-0">
            <i class="bi bi-boxes text-primary me-2"></i>

            @if (ViewBag.GroupName != null)
            {
                @ViewBag.GroupName <span class="text-muted fs-6"> | Stoklar</span>
            }
            else
            {
                <text>Stoklar</text>
            }
        </h2>

        <!-- Sağdaki Butonlar -->
        <div class="d-flex align-items-center gap-2">
            @if (ViewBag.GroupId != null)
            {
                <a asp-action="Index"
                   asp-controller="StockGroup"
                   class="btn btn-outline-secondary btn-sm shadow-sm">
                    <i class="bi bi-arrow-left-circle me-1"></i> Geri Dön
                </a>

                <a asp-action="Create"
                   asp-route-groupId="@ViewBag.GroupId"
                   class="btn btn-primary btn-sm shadow-sm">
                    <i class="bi bi-plus-circle me-1"></i> Yeni Stok
                </a>
            }
            else
            {
                <a asp-action="Create"
                   class="btn btn-primary btn-sm shadow-sm">
                    <i class="bi bi-plus-circle me-1"></i> Yeni Stok
                </a>
            }
        </div>
    </div>


    <!-- Kart -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">

                <table class="table table-bordered table-hover align-middle table-sm mb-0 text-center">
                <thead class="table-light border-bottom">
                    <tr class="text-secondary small text-uppercase">
                        <th>Kod</th>
                        <th>Ad</th>
                        <th>Marka</th>
                        <th>Model</th>
                        <th>Grup</th>
                        <th>Birim</th>
                        <th>Şirket</th>
                        <th class="text-center" style="width:220px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="border-bottom">
                                <td class="fw-semibold">@item.Code</td>
                                <td>@item.Name</td>
                                <td>@item.Brand</td>
                                <td>@item.Model</td>
                                <td>@item.StockGroupName</td>
                                <td>@item.StockGroupUnitType</td>
                                <td>@item.CompanyName</td>

                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-outline-warning btn-sm"
                                           title="Düzenle">
                                            <i class="bi bi-pencil">Düzenle</i>
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-outline-danger btn-sm"
                                           title="Sil">
                                            <i class="bi bi-trash">Sil</i>
                                        </a>

                                        <a asp-area="User"
                                           asp-controller="StockPrice"
                                           asp-action="Index"
                                           asp-route-stockId="@item.Id"
                                           class="btn btn-outline-secondary btn-sm"
                                           title="Fiyatlar">
                                            <i class="bi bi-cash-coin">Fiyatlandırma</i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-3">
                                <i class="bi bi-info-circle me-1"></i>
                                @if (ViewBag.GroupName != null)
                                {
                                    <text>Bu grupta stok bulunmamaktadır.</text>
                                }
                                else
                                {
                                    <text>Henüz stok kaydı bulunmamaktadır.</text>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
