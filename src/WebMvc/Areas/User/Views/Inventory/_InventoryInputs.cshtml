@model List<Application.DTOs.Inventory.InventoryDto>

<div class="card border-success mb-4">
    <div class="card-header bg-success text-white fw-semibold">
        <i class="bi bi-box-arrow-in-down"></i> Stok Girişleri
    </div>
    <div class="card-body table-responsive">
        @if (Model.Any())
        {
            <table class="table table-hover table-sm ">
                <thead class="table-light">
                    <tr>
                        <th>Stok</th>
                        <th>Miktar</th>
                        <th>Tarih</th>
                        <th>Açıklama</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>@i.StockName</td>
                            <td class="text-success fw-semibold">@i.Quantity</td>
                            <td>@i.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@i.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center text-muted small">
                <i class="bi bi-info-circle"></i> Bu depoda hiç giriş hareketi yok.
            </div>
        }
    </div>
</div>
