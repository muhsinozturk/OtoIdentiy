@model Application.DTOs.Act.ActWithVehiclesDto

<h2>Müşteri Detayı</h2>

<div class="card mb-3">
    <div class="card-body">
        <h4>@Model.FullName</h4>
        <p><strong>TC No:</strong> @Model.TcNo</p>
        <p><strong>Şirket:</strong> @Model.CompanyName</p>
    </div>
</div>

<h3>Araçlar</h3>
<a asp-area="User" asp-controller="Vehicle" asp-action="Create" asp-route-actId="@Model.Id" class="btn btn-primary mb-3">
    Yeni Araç Ekle
</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Plaka</th>
            <th>Marka</th>
            <th>Model</th>
            <th>Yıl</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model.Vehicles)
        {
            <tr>
                <td>@v.Plate</td>
                <td>@v.Brand</td>
                <td>@v.Model</td>
                <td>@v.ModelYear</td>
                <td>@v.Description</td>
                <td>
                    <a asp-area="User" asp-controller="Vehicle" asp-action="Edit" asp-route-id="@v.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-area="User" asp-controller="Vehicle" asp-action="Delete" asp-route-id="@v.Id" class="btn btn-danger btn-sm">Sil</a>
                    <a asp-area="User" asp-controller="WorkOrder" asp-action="Index" asp-route-vehicleId="@v.Id" class="btn btn-info btn-sm">İş Emirleri</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Geri</a>
