@model List<Application.DTOs.Invoice.InvoiceDto>

<div class="container-fluid px-4 mt-4">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0 fw-semibold">
                <i class="bi bi-receipt-cutoff me-2"></i> Fatura Listesi
            </h4>

     
          
        </div>

        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle table-sm mb-0 text-center">
                        <thead class="table-light">
                            <tr>
                                <th class="text-start">Fatura No</th>
                                <th>Araç Plaka</th>
                                <th>Tarih</th>
                                <th>İş Emri</th>
                                <th class="text-end">Toplam Tutar</th>
                                <th style="width: 340px;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {
                                <tr>
                                    <td class="text-start fw-semibold">@i.Id</td>
                                    <td>@i.VehiclePlate</td>
                                    <td>@i.Date.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="WorkOrder" asp-action="Details" asp-route-id="@i.WorkOrderId"
                                           class="text-decoration-none text-primary fw-semibold">
                                            #@i.WorkOrderId
                                        </a>
                                    </td>
                                    <td class="text-end fw-bold">@i.Total.ToString("N2") ₺</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@i.Id"
                                           class="btn btn-outline-primary btn-sm" title="Fatura Detayı">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-secondary text-center mb-0 py-3 small">
                    <i class="bi bi-info-circle me-1"></i>
                    Henüz fatura kaydı bulunmamaktadır.
                </div>
            }
        </div>
    </div>
</div>
