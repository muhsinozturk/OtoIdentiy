@model Application.DTOs.StockPrice.StockPriceMultiCreateDto

<div class="container-fluid px-4 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-semibold mb-0">
            <i class="bi bi-currency-exchange text-primary me-2"></i> @Model.StockName Fiyatları
        </h2>
        <a asp-action="Index" asp-controller="StockPrice" asp-area="User" asp-route-id="@Model.StockId"
           class="btn btn-secondary btn-sm">
            <i class="bi bi-arrow-left-circle me-1"></i> Stok Detayına Dön
        </a>
    </div>


    <form asp-action="Create" method="post" novalidate>
        <input type="hidden" asp-for="StockId" />

        <div class="row g-4">
            @for (int i = 0; i < Model.Prices.Count; i++)
            {
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-primary text-white fw-semibold">
                            <i class="bi bi-tag me-1"></i> @Model.Prices[i].StockPriceTypeName
                            <small class="text-white-50">(@Model.Prices[i].Code)</small>
                        </div>

                        <div class="card-body">
                            <input type="hidden" asp-for="Prices[@i].StockPriceTypeId" />
                            <input type="hidden" asp-for="Prices[@i].StockPriceTypeName" />
                            <input type="hidden" asp-for="Prices[@i].Code" />

                            <div class="mb-3">
                                <label asp-for="Prices[@i].Price" class="form-label fw-semibold">Fiyat</label>
                                <div class="input-group input-group-sm">
                                    <span class="input-group-text bg-light text-muted">
                                        <i class="bi bi-cash-stack"></i>
                                    </span>
                                    <input asp-for="Prices[@i].Price" class="form-control form-control-sm"
                                           placeholder="Fiyat giriniz" />
                                </div>
                                <span asp-validation-for="Prices[@i].Price" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <hr class="my-4" />

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-success px-4">
                <i class="bi bi-save me-1"></i> Kaydet
            </button>
        </div>
    </form>
</div>
