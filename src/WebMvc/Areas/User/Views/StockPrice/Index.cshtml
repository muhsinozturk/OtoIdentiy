@model List<Application.DTOs.StockPrice.StockPriceDto>
@{
    var stock = ViewBag.Stock as Application.DTOs.Stock.StockDto;
}

<div class="container-fluid px-4 mt-4">
    @if (stock == null)
    {
        <div class="alert alert-danger shadow-sm">
            <i class="bi bi-exclamation-triangle me-1"></i> Stok bilgisi bulunamadı.
        </div>
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="fw-semibold mb-0">
                <i class="bi bi-currency-exchange text-primary me-2"></i> @stock.Name Fiyatları
            </h2>
            <a asp-action="Create" asp-route-stockId="@stock.Id" class="btn btn-primary btn-sm shadow-sm">
                <i class="bi bi-plus-circle me-1"></i> Yeni Fiyat Ekle
            </a>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info shadow-sm">
                <i class="bi bi-info-circle me-1"></i> Bu stok için henüz fiyat tanımlanmamış.
            </div>
        }
        else
        {
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <table class="table table-bordered table-hover align-middle table-sm mb-0 text-center">
                        <thead class="table-light border-bottom">
                            <tr class="text-secondary small text-uppercase">
                                <th>Fiyat Tipi</th>
                                <th>Fiyat</th>
                                <th class="text-center" style="width:160px;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="border-bottom">
                                    <td class="fw-semibold">@item.StockPriceTypeName</td>
                                    <td>@item.Price ₺</td>
                                    <td class="text-center">
                                        <div class="btn-group " role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" asp-route-stockId="@item.StockId"
                                               class="btn btn-outline-warning" title="Düzenle">
                                                <i class="bi bi-pencil">Düzenle</i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" asp-route-stockId="@item.StockId"
                                               class="btn btn-outline-danger" title="Sil">
                                                <i class="bi bi-trash">Sil</i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    }
</div>
