@model List<Application.DTOs.Depot.DepotDto>

<div class="container-fluid px-4 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-semibold mb-0">
            <i class="bi bi-house-gear text-primary me-2"></i> Depolar
        </h2>

        <a asp-action="Create" class="btn btn-primary btn-sm shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Yeni Depo Ekle
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info shadow-sm">
            <i class="bi bi-info-circle me-1"></i> Henüz depo kaydı bulunmamaktadır.
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <table class="table table-bordered table-hover align-middle table-sm mb-0 text-center">
                    <thead class="table-light border-bottom">
                        <tr class="text-secondary small text-uppercase">
                            <th>No</th>
                            <th>Ad</th>
                            <th>Açıklama</th>
                            <th>Şirket</th>
                            <th class="text-center" style="width:260px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-bottom">
                                <td class="fw-semibold">@item.No</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.CompanyName</td>
                                <td class="text-center">
                                    <div class="btn-group " role="group">
                                        <a asp-action="Details"
                                           asp-route-id="@item.Id"
                                           class="btn btn-outline-info"
                                           title="Detay">
                                            <i class="bi bi-eye">Stoklar</i>
                                        </a>

                                        <a asp-action="Edit"
                                           asp-route-id="@item.Id"
                                           class="btn btn-outline-warning"
                                           title="Düzenle">
                                            <i class="bi bi-pencil">Düzenle</i>
                                        </a>

                                        <a asp-action="Delete"
                                           asp-route-id="@item.Id"
                                           class="btn btn-outline-danger"
                                           title="Sil">
                                            <i class="bi bi-trash">Sil</i>
                                        </a>

                                        <a asp-area="User"
                                           asp-controller="Inventory"
                                           asp-action="Create"
                                           asp-route-depotId="@item.Id"
                                           class="btn btn-outline-success"
                                           title="Envanter Ekle">
                                            <i class="bi bi-box-seam">Envanter Gir</i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
