@model IEnumerable<Application.DTOs.StockGroup.StockGroupDto>

<div class="container-fluid px-4 mt-4 ">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-semibold mb-0">
            <i class="bi bi-box-seam text-primary me-2"></i> Stok Grupları
        </h2>

        <a asp-action="Create" class="btn btn-primary btn-sm shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Yeni Grup
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <table class="table table-bordered table-hover align-middle table-sm mb-0 text-center">
                <thead class="table-light border-bottom">
                    <tr class="text-secondary small text-uppercase">
                        <th>Ad</th>
                        <th>Birim Tipi</th>
                        <th class="text-center" style="width:160px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var group in Model)
                        {
                            <tr class="border-bottom">
                                <td class="fw-semibold">@group.Name</td>
                                <td>@group.UnitType</td>
                                <td class="text-center">
                                    <div class="btn-group"  role="group">
                                        <a asp-area="User"
                                           asp-controller="Stock"
                                           asp-action="Index"
                                           asp-route-groupId="@group.Id"
                                           class="btn btn-outline-info btn-sm">
                                            <i class="bi bi-box2">Stoklar</i> 
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@group.Id" class="btn btn-outline-warning" title="Düzenle">
                                            <i class="bi bi-pencil">Düzenle</i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@group.Id" class="btn btn-outline-danger" title="Sil">
                                            <i class="bi bi-trash">Sil</i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-3">
                                <i class="bi bi-info-circle me-1"></i> Henüz stok grubu bulunmamaktadır.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
