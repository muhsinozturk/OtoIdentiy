@using WebMvc.Areas.Admin.Models

@model List<AssingRoleToUserViewModel>

    <div class="row">
        <div class="col-md-6 offset-3">
            <h2>
            Kullanıcıya Rol Atama
            </h2>
            <form asp-action="AssingRoleToUser" asp-route-userId="@ViewBag.userId" method="post">
            
                @for(int i = 0; i < Model.Count; i++)
                {
                 <div class="form-check">
                    
                     <input type="checkbox" class="form-check-input" asp-for="@Model[i].Exist" /> 
                    <label class="form-check-label">@Model[i].Name</label>
                    <input type="hidden" asp-for="@Model[i].Name" />
                    <input type="hidden" asp-for="@Model[i].Id" />
                </div>
                }

            <div class="d-grid">
                <button type="submit" class="btn btn-success fw-bold">
                    <i class="bi bi-check-circle"></i> Ata
                </button>
            </div>
            </form>
            <div class="mt-3">
                <a asp-controller="home" asp-action="UserList"> Kullanıcı Listesine Geri Dön</a>
            </div>
        </div>
    </div>