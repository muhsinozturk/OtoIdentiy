@model List<Application.DTOs.Vehicle.VehicleDto>

<h2>@ViewBag.ActName - Araçlar</h2>

<a asp-action="Create" asp-route-actId="@ViewBag.ActId" class="btn btn-primary mb-3">Yeni Araç Ekle</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Plaka</th>
            <th>Marka</th>
            <th>Model</th>
            <th>Yıl</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.Plate</td>
                <td>@v.Brand</td>
                <td>@v.Model</td>
                <td>@v.ModelYear</td>
                <td>@v.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@v.Id" class="btn btn-warning ">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@v.Id" class="btn btn-danger ">Sil</a>
                    <a asp-area="Admin" asp-controller="WorkOrder" asp-action="Index" asp-route-vehicleId="@v.Id" class="btn btn-info ">İş Emirleri</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-area="Admin" asp-controller="Act" asp-action="Details" asp-route-id="@ViewBag.ActId" class="btn btn-secondary">Müşteriye Dön</a>
