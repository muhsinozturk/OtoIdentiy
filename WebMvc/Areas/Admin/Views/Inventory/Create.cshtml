@model Application.DTOs.Inventory.CreateInventoryDto

<div class="container-fluid px-4 mt-4">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white fw-semibold">
            <i class="bi bi-box-seam me-2"></i> Yeni Envanter Ekle
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post" class="row g-3" novalidate>
                <input type="hidden" name="DepotId" value="@Model.DepotId" />
                <input type="hidden" name="IsInput" value="true" />

                <!-- Stok Grubu -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Stok Grubu</label>
                    <select id="StockGroupId" class="form-select form-select-sm company-select">
                        <option value="">Seçiniz...</option>
                        @foreach (var g in ViewBag.StockGroups)
                        {
                            <option value="@g.Id">@g.Name</option>
                        }
                    </select>
                </div>

                <!-- Stok -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Stok</label>
                    <select id="StockId" name="StockId" class="form-select form-select-sm company-select">
                        <option value="">Önce grup seçiniz...</option>
                    </select>
                </div>

                <!-- Miktar -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Miktar</label>
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-light text-muted">
                            <i class="bi bi-stack"></i>
                        </span>
                        <input type="number" step="0.01" name="Quantity" class="form-control form-control-sm" placeholder="Miktar giriniz" />
                    </div>
                </div>

                <hr class="my-4" />

                <div class="col-12 d-flex justify-content-end gap-2">
                    <a asp-action="Index" asp-route-depotId="@Model.DepotId" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Geri
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save me-1"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $("#StockGroupId").change(function () {
            var groupId = $(this).val();
            var $stockDropdown = $("#StockId");
            $stockDropdown.empty();

            if (groupId) {
                $.getJSON('@Url.Action("GetStocksByGroup", "Inventory", new { area = "Admin" })',
                    { groupId: groupId })
                    .done(function (data) {
                        $stockDropdown.append($('<option>').val('').text('Seçiniz...'));
                        $.each(data, function (i, item) {
                            $stockDropdown.append(
                                $('<option>').val(item.id).text(item.name)
                            );
                        });
                    });
            } else {
                $stockDropdown.append($('<option>').val('').text('Önce grup seçiniz...'));
            }
        });
    </script>
}
