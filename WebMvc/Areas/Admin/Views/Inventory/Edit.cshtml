@model Application.DTOs.Inventory.InventoryDto

<div class="container-fluid px-4 mt-4">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white fw-semibold">
            <i class="bi bi-pencil-square me-2"></i> Stok Girişini Düzenle
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post" novalidate>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="DepotId" />

                <!-- Stok Adı -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Stok</label>
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-light text-muted">
                            <i class="bi bi-box-seam"></i>
                        </span>
                        <input asp-for="StockName" class="form-control form-control-sm" disabled />
                    </div>
                    <input type="hidden" asp-for="StockId" />
                </div>

                <!-- Miktar -->
                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label fw-semibold">Miktar</label>
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-light text-muted">
                            <i class="bi bi-stack"></i>
                        </span>
                        <input asp-for="Quantity" class="form-control form-control-sm" placeholder="Yeni miktar giriniz" />
                    </div>
                    <span asp-validation-for="Quantity" class="text-danger small"></span>
                </div>

                <hr class="my-4" />

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" asp-route-depotId="@Model.DepotId" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Geri
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save me-1"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
