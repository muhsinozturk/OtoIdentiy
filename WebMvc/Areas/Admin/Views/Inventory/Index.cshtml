@model List<Application.DTOs.Inventory.InventoryDto>


<div class="d-flex justify-content-end my-1 mx-4">
    @if (ViewBag.DepotId != null)
    {
        <a  asp-action="Create" asp-route-depotId="@ViewBag.DepotId" class="btn btn-success btn-sm">
            <i class="bi bi-plus-circle me-1"></i> Yeni Envanter
        </a>
    }
</div>

<div class="container-fluid px-4 mt-4">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white fw-semibold d-flex justify-content-between align-items-center">
            <span><i class="bi bi-boxes me-2"></i> Depo Envanterleri</span>

        
        </div>

        <div class="card-body">
            <!-- Filtre -->
            <form method="get" asp-action="Index" class="row g-3 align-items-end mb-4">
                <div class="col-md-2 ">
                    <label class="form-label fw-semibold ">Depo Seç</label>
                    <select id="DepotSelect" name="depotId" class="form-select form-select-sm" asp-items="ViewBag.Depots">
                        <option value="">Seçiniz...</option>
                    </select>
                </div>

                <div class="col-md-3 ">
                    <label class="form-label fw-semibold ">Başlangıç Tarihi</label>
                    <input type="date" name="startDate" value="@ViewBag.StartDate" class="form-control form-control-sm" />
                </div>

                <div class="col-md-3 ">
                    <label class="form-label fw-semibold ">Bitiş Tarihi</label>
                    <input type="date" name="endDate" value="@ViewBag.EndDate" class="form-control form-control-sm" />
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-semibold">Ara (Stok Adı / Kod / Marka / Model)</label>
                    <input type="text" name="search" value="@ViewBag.Search" class="form-control form-control-sm" placeholder="Arama terimi yaz..." />
                </div>

                <div class="col-md-1 d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-primary btn-sm mt-2">
                        <i class="bi bi-search me-1"></i> Filtrele
                    </button>
                </div>
            </form>

            <!-- Tablo -->
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle table-sm">
                        <thead class="table-light">
                            <tr>
                                <th>Stok Adı</th>
                                <th>Marka</th>
                                <th>Model</th>
                                <th>Kodu</th>
                                <th class="text-end">Miktar</th>
                                <th class="text-center">Giriş Tarihi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@i.StockDto.Name</td>
                                    <td>@i.StockDto.Brand</td>
                                    <td>@i.StockDto.Model</td>
                                    <td>@i.StockDto.Code</td>
                                    <td class="text-end">@i.Quantity</td>
                                    <td class="text-center text-muted">@i.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else if (ViewBag.DepotId != null)
            {
                <div class="alert alert-info text-center small">
                    <i class="bi bi-info-circle me-1"></i> Bu kriterlerde kayıt bulunamadı.
                </div>
            }
            else
            {
                <div class="alert alert-secondary text-center small">
                    <i class="bi bi-warehouse me-1"></i> Lütfen depo seçiniz.
                </div>
            }

            <!-- Sayfalama -->
            @if (ViewBag.TotalPages > 1)
            {
                <nav class="mt-3">
                    <ul class="pagination justify-content-center mb-0">
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link"
                                   asp-route-depotId="@ViewBag.DepotId"
                                   asp-route-search="@ViewBag.Search"
                                   asp-route-startDate="@ViewBag.StartDate"
                                   asp-route-endDate="@ViewBag.EndDate"
                                   asp-route-page="@(ViewBag.CurrentPage - 1)">‹ Önceki</a>
                            </li>
                        }

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link"
                                   asp-route-depotId="@ViewBag.DepotId"
                                   asp-route-search="@ViewBag.Search"
                                   asp-route-startDate="@ViewBag.StartDate"
                                   asp-route-endDate="@ViewBag.EndDate"
                                   asp-route-page="@i">@i</a>
                            </li>
                        }

                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link"
                                   asp-route-depotId="@ViewBag.DepotId"
                                   asp-route-search="@ViewBag.Search"
                                   asp-route-startDate="@ViewBag.StartDate"
                                   asp-route-endDate="@ViewBag.EndDate"
                                   asp-route-page="@(ViewBag.CurrentPage + 1)">Sonraki ›</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $("#DepotSelect").change(function () {
            const depotId = $(this).val();
            if (depotId)
                window.location.href = '@Url.Action("Index", "Inventory", new { area = "Admin" })' + '?depotId=' + depotId;
            else
                window.location.href = '@Url.Action("Index", "Inventory", new { area = "Admin" })';
        });
    </script>
}
