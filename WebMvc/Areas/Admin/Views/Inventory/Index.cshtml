@model List<Application.DTOs.Inventory.InventoryDto>

<div class=" d-flex justify-content-end mx-5">
    @if (ViewBag.DepotId != null)
    {
        <a asp-action="Create" asp-route-depotId="@ViewBag.DepotId" class="btn btn-success btn-sm">
            <i class="bi bi-plus-circle me-1"></i> Yeni Envanter
        </a>
    }
</div>
    
<div class="container-fluid px-4 mt-4">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white fw-semibold d-flex justify-content-between align-items-center">
            <span><i class="bi bi-boxes me-2"></i> Depo Envanterleri</span>

           
        </div>

        <div class="card-body">
            <!-- Depo Seçimi -->
            <div class="row align-items-end mb-4">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Depo Seç</label>
                    <select id="DepotSelect" class="form-select form-select-sm company-select" asp-items="ViewBag.Depots">
                        <option value="">Seçiniz...</option>
                    </select>
                </div>
            </div>

            <!-- Envanter Tablosu -->
            <div id="inventoryTable">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th>Stok Adı</th>
                                    <th>Stok Marka</th>
                                    <th>Stok Model</th>
                                    <th>Stok Kodu</th>
                                    <th class="text-end">Miktar</th>
                                    <th class="text-center">Giriş Tarihi</th> <!-- ✅ yeni sütun -->
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var i in Model)
                                {
                                    <tr>
                                        <td class="fw-semibold">@i.StockName</td>
                                        <td class="fw-semibold">@i.StockDto.Brand</td>
                                        <td class="fw-semibold">@i.StockDto.Model</td>
                                        <td class="fw-semibold">@i.StockDto.Code</td>
                                        <td class="text-end">@i.Quantity</td>
                                        <td class="text-center text-muted">
                                            @i.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else if (ViewBag.DepotId != null)
                {
                    <div class="alert alert-info small text-center mb-0">
                        <i class="bi bi-info-circle me-1"></i> Bu depoda henüz stok bulunmuyor.
                    </div>
                }
                else
                {
                    <div class="alert alert-secondary small text-center mb-0">
                        <i class="bi bi-warehouse me-1"></i> Lütfen bir depo seçiniz.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $("#DepotSelect").change(function () {
            var depotId = $(this).val();
            if (depotId) {
                window.location.href = '@Url.Action("Index", "Inventory", new { area = "Admin" })' + '?depotId=' + depotId;
            }
        });
    </script>
}
