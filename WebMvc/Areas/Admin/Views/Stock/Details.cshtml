@model Application.DTOs.Stock.StockDto

<div class="container-fluid px-4 mt-4">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white fw-semibold">
            <i class="bi bi-box2-fill me-2"></i> Stok Kartı Detayları
        </div>

        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <p class="mb-1 text-muted small">Stok Grubu</p>
                    <p class="fw-semibold">@Model.StockGroupName</p>
                </div>

                <div class="col-md-6">
                    <p class="mb-1 text-muted small">Stok Birimi</p>
                    <p class="fw-semibold">@Model.StockGroupUnitType</p>
                </div>

                <div class="col-md-6">
                    <p class="mb-1 text-muted small">Kod</p>
                    <p class="fw-semibold">@Model.Code</p>
                </div>

                <div class="col-md-6">
                    <p class="mb-1 text-muted small">Ad</p>
                    <p class="fw-semibold">@Model.Name</p>
                </div>

                <div class="col-md-6">
                    <p class="mb-1 text-muted small">Marka</p>
                    <p class="fw-semibold">@Model.Brand</p>
                </div>

                <div class="col-md-6">
                    <p class="mb-1 text-muted small">Model</p>
                    <p class="fw-semibold">@Model.Model</p>
                </div>

                <div class="col-md-6">
                    <p class="mb-1 text-muted small">Şirket</p>
                    <p class="fw-semibold">@Model.CompanyName</p>
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-end">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Geri Dön
                </a>
            </div>
        </div>
    </div>
</div>
