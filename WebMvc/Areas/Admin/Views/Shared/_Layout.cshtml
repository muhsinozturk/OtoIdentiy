    <script src="~/dist/js/adminlte.min.js" asp-append-version="true"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function () {
        // Navbar içindeki dropdown linklerini bul
        const dropdowns = document.querySelectorAll('.navbar-nav .dropdown-toggle');
        dropdowns.forEach(function (el) {
            el.addEventListener('click', function (e) {
                e.preventDefault(); // link davranışını durdur
                const menu = el.nextElementSibling;
                if (menu && menu.classList.contains('show')) {
                    menu.classList.remove('show');
                } else {
                    document.querySelectorAll('.navbar-nav .dropdown-menu.show')
                        .forEach(m => m.classList.remove('show'));
                    menu.classList.add('show');
                }
            });
        });

        // Sayfanın başka yerine tıklanınca dropdown’ı kapat
        document.addEventListener('click', function (e) {
            if (!e.target.closest('.nav-item.dropdown')) {
                document.querySelectorAll('.navbar-nav .dropdown-menu.show')
                    .forEach(m => m.classList.remove('show'));
            }
        });
    });
</script>


    @RenderSection("Scripts", required: false)
