@model List<Application.DTOs.Inventory.DepotInventorySummaryDto>

<div class="container-fluid px-4 mt-4">

    <!-- Başlık -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-semibold mb-0">
            <i class="bi bi-warehouse text-primary me-2"></i>
            @ViewBag.Depot?.Name ?? "Depo" - Envanter Özeti
        </h3>

        <div>
            <a asp-action="Index" class="btn btn-secondary btn-sm me-2">
                <i class="bi bi-arrow-left-circle"></i> Geri
            </a>
            <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#addInventoryModal">
                <i class="bi bi-plus-circle"></i> Envanter Ekle
            </button>
        </div>
    </div>

    <!-- Envanter Özeti Tablosu -->
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-white fw-semibold">
            <i class="bi bi-box-seam me-2"></i> Envanter Giriş / Çıkış Özeti
        </div>

        <div class="card-body table-responsive">
            <table id="inventoryTable" class="table table-bordered table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Kategori</th>
                        <th>Stok Adı</th>
                        <th>Marka</th>
                        <th>Model</th>
                        <th class="text-success text-end">Toplam Giriş</th>
                        <th class="text-danger text-end">Toplam Çıkış</th>
                        <th class="text-center">Net Miktar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.StockGroupName</td>
                            <td>@item.StockName</td>
                            <td>@item.StockBrand</td>
                            <td>@item.StockModel</td>

                            <td class="text-end text-success fw-semibold">@item.TotalIn</td>
                            <td class="text-end text-danger fw-semibold">@item.TotalOut</td>

                            <td class="text-center fw-bold @(item.NetQuantity < 0 ? "text-danger" : "text-primary")">
                                @item.NetQuantity
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Geri Butonu -->
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Geri
        </a>
    </div>
</div>

@section Scripts {
    <!-- DataTables -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#inventoryTable').DataTable({
                pageLength: 10,
                order: [[0, 'asc']], // kategoriye göre sırala
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json"
                },
                columnDefs: [
                    { targets: [4, 5, 6], className: 'text-end' } // miktar kolonlarını sağa hizala
                ]
            });
        });
    </script>
}
