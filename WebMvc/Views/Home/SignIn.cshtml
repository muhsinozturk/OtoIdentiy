@using Application.ViewModels

@model SignInViewModel

@{
    ViewData["Title"] = "SignIn";
}

@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 400px; border-radius: 15px;">
        <h3 class="text-center mb-4 fw-bold text-primary">Giriş Yap</h3>

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <form asp-controller="Home" asp-action="SignIn"
              asp-route-returnurl="@Context.Request.Query["returnURL"]"
              method="post">

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold"></label>
                <input asp-for="Email" class="form-control" placeholder="E-posta adresiniz" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold"></label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Şifreniz" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="row align-items-center mb-3">
                <div class="col-md-6">
                    <div class="form-check">
                        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Beni hatırla</label>
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <a class="btn btn-link p-0 text-decoration-none"
                       asp-controller="Home"
                       asp-action="ForgetPassword">
                        Şifremi Unuttum
                    </a>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100 fw-bold">
                <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
            </button>

        </form>
    </div>
</div>
